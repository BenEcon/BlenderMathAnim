shader exponential_function_shader(
    vector vec=(0.,0.,0.),float xmin = 0, float xmax = 10,float ymin = 0, float ymax = 10,float base=1,
   output float r=0., output float phi=0)
{
    float pi = 3.141592654;
    float x= xmin+vec[0]*(xmax-xmin);
    float y= ymin+vec[1]*(ymax-ymin);
    
    float lb = log(base);
    r = exp(lb*x);
    
    float f = lb*y;
  
    int n = floor(f/2/pi);
    f = f-n*2*pi;
    
  
    phi = f/2/pi;
      
}