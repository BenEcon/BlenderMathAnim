shader identity_function_shader(
    vector vec=(0.,0.,0.),float xmin = 0, float xmax = 10,float ymin = 0, float ymax = 10,int n = 10,
   output float r=0., output float phi=0)
{
    float pi = 3.141592654;
    float x= xmin+vec[0]*(xmax-xmin);
    float y= ymin+vec[1]*(ymax-ymin);
    
    
    float re = x;
    float im = y;
     
    r = sqrt(re*re+im*im);
    phi = 0.5+atan2(im,re)/2/pi;
}